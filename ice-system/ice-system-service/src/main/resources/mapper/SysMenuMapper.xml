<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhb.ice.system.mapper.SysMenuMapper">

    <!--通过角色查询菜单信息-->
    <select id="listMenusByRoleId" resultType="com.zhb.ice.system.api.entity.SysMenu">
		SELECT
			sys_menu.*
		FROM
			sys_menu
		LEFT JOIN sys_role_menu ON sys_menu.id = sys_role_menu.menu_id
		WHERE
			sys_menu.is_del = 0
		AND sys_role_menu.role_id = #{roleId}
		ORDER BY
			sys_menu.sort DESC
    </select>
</mapper>
